/* components/Tabs/Tabs.wxss */
.tabs{
  display: flex;
  background-color:white;
  height: 60rpx;
}

.nav {
  width: 100%;
  height: 100%;
  white-space: nowrap;
  box-sizing: border-box;
  margin: 0 0 8rpx;
}

.nav .item {
  width: 180rpx;
  height: 80%;
  display: inline-block;
  font-size: 35rpx; 
  font-weight: initial;
  text-align: center;
}

.active{
  position: relative;
}

.active::after{
  content: " ";
  width: 150rpx;
  height: 8rpx;
  background: black;
  position: absolute;
  top: 45rpx;
  left: 50%;
  transform: translateX(-50%);
}

.content{
  display: flex;
}